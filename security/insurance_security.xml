<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.module.category" id="module_insurance_category">
        <field name="name">Lunch</field>
        <field name="description">Used to process claims through Odoo</field>
        <field name="sequence">16</field>
    </record>
    
    <record id="group_insurance_claim_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_insurance_category"/>
        <field name="comment">The user will have read access of the claims and generating reports.</field>
    </record>
        
    <record id="group_insurance_claim_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_insurance_claim_user'))]"/>
        <field name="category_id" ref="module_insurance_category"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="comment">The manager can create, read, edit, process claims. The maganger can configure insurance related settings and parameters.</field>
    </record>
    
    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('lunch.group_insurance_claim_manager'))]"/>
        </record>
    </data>
    
</odoo>
