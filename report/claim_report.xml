<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="tree_claim_report" model="ir.ui.view">
        <field name="name">tree.claim.report</field>
        <field name="model">claim.report</field>
        <field name="arch" type="xml">
            <tree create="0" string="Claim Report">
                <field name="partner_id"/>
                <field name="nhis_number"/>
                <field name="claim_code"/>
                <field name="state"/>
                <field name="claimed_amount_total" sum="Total Claimed Amount" />
                <field name="amount_approved_total" sum="Total Approved Amount" />
                <field name="claimed_date"/>
            </tree>
        </field>
    </record>
    
    <record id="action_claim_report" model="ir.actions.act_window">
        <field name="name">Claim Report</field>
        <field name="res_model">claim.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>
    
    <menuitem id="menu_claim_report" action="action_claim_report"
        parent="menu_insurance_report" sequence="1"/>
    
</odoo>